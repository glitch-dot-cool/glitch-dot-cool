{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "name": "Post",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 60
    },
    "published_date": {
      "required": true,
      "type": "datetime"
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "body": {
      "type": "richtext"
    },
    "thumbnail": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    },
    "skip_frontpage": {
      "type": "boolean",
      "default": false
    },
    "authors": {
      "collection": "author",
      "via": "posts",
      "dominant": true
    },
    "tags": {
      "collection": "tag",
      "via": "posts",
      "dominant": true
    },
    "links": {
      "type": "component",
      "repeatable": true,
      "component": "links.links"
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "blog",
        "project",
        "editorial"
      ],
      "default": "blog",
      "required": true
    }
  }
}
