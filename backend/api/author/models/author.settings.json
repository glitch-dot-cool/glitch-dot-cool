{
  "kind": "collectionType",
  "collectionName": "authors",
  "info": {
    "name": "Author",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "author_name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "location": {
      "type": "string"
    },
    "email": {
      "type": "email",
      "unique": false
    },
    "avatar": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": true
    },
    "posts": {
      "via": "authors",
      "collection": "post"
    },
    "user": {
      "unique": true,
      "plugin": "users-permissions",
      "model": "user"
    },
    "link": {
      "type": "component",
      "repeatable": true,
      "component": "links.links"
    },
    "gallery": {
      "type": "component",
      "repeatable": true,
      "component": "gallery.gallery-item"
    }
  }
}
